{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "express", "bcryptjs", "cookie-parser", "jsonwebtoken"]
  },
 "include": ["backend/src/**/*"], // Specifies which files to include when compiling your project.
	"exclude": ["node_modules", "**/*.spec.ts", "frontend"] 
}
