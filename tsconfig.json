{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./backend/dist",
		"rootDir": "./backend",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"ts-node": {
		"esm": true
	},
	"include": [
		"backend/src/**/*",
		"backend/src/declarations.d.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"frontend",
		"dist"
	]
}